{
  "name": "datazar",
  "private": false,
  "type": "module",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.4",
    "@vercel/ncc": "^0.38.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.3"
  },
  "bin": {
    "dz": "./dist/datazar.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build:deps": "pnpm -F datazar... build",
    "build:watch": "tsc --watch",
    "build:ncc": "ncc build src/datazar.ts -o out",
    "build:pkg": "pkg --no-bytecode  -t node*-linux-x64 --out-path cli ./dist/datazar.js",
    "dev": "tsx -r dotenv/config src/datazar.ts",
    "start": "node dist/datazar.js"
    
  },
  "dependencies": {
    "@datazar/cli": "workspace:^",
    "@datazar/mariadb": "workspace:^",
    "@datazar/mongo": "workspace:^",
    "@datazar/mssql": "workspace:^",
    "@datazar/postgres": "workspace:^",
    "commander": "^12.1.0",
    "pkg": "^5.8.1",
    "tsx": "^4.19.1",
    "winston": "^3.13.0"
  },
  "pkg": {
    "options": [
      "experimental-modules"
    ]
  }
}