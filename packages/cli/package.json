{
  "name": "@datazar/cli",
  "version": "0.0.0-development",
  "author": "Nitzan Ohana <16689354+nitzano@users.noreply.github.com>",
  "private": true,
  "type": "module",
  "bin": {
    "dz": "./dist/datazar.js"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.4",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.4.3"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build:deps": "pnpm -F cli... build",
