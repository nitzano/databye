{
  "name": "datazar",
  "private": false,
  "type": "module",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.4",
    "typescript": "^5.4.3"
  },
  "bin": {
    "dz": "./dist/datazar.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build:deps": "pnpm -F datazar... build",
    "build:watch": "tsc --watch",
    "dev": "tsx -r dotenv/config src/datazar.ts",
    "start": "node dist/datazar.js",
    "deploy": "pkg --out-directory cli/ ./dist/datazar.js"
  },
  "dependencies": {
    "@datazar/cli": "workspace:^",
    "@datazar/mariadb": "workspace:^",
    "@datazar/mongo": "workspace:^",
    "@datazar/mssql": "workspace:^",
    "@datazar/postgres": "workspace:^",
    "commander": "^12.1.0",
    "tsx": "^4.19.1",
    "winston": "^3.13.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "options": [
      "experimental-modules"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-win-x64"
    ]
  }
}